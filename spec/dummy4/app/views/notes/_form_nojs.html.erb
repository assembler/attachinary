<%= simple_form_for note, html: { novalidate: true, multipart: true } do |f| %>

  <%= hidden_field_tag 'kind', params[:kind] %>

  <%= f.input :body, as: :string %>

  <div class="photo">
    <%= f.input :photo, as: :file %>
  </div>

  <div class="images">
    <%= f.input :images, as: :file, input_html: { multiple: true } %>
  </div>

  <%= f.submit %>

<% end %>
